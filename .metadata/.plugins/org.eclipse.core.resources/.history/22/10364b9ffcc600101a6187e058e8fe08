package Arrays;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Ejercicio9 {

	public static void main(String[] args) throws NumberFormatException, IOException {
		int[] numeros = new int[15];
		for(int i=0; i<numeros.length; i++) {
			numeros[i] = leerInt("Introduce el numero " + (i + 1) + " de 15: ");
		}
		
		int numMultiploN = leerInt("Introduzca un número: ");
		int contador = 0;
		
		for(int i = 0; i < numeros.length; i++) {
			if(numeros[i] %numMultiploN ==0 )
				contador++;
		}
		System.out.println("Hay " + contador+ " numeros que son múltiplos de "+numMultiploN+ ".");
		}

	public static int leerInt(String mensaje) throws NumberFormatException, IOException {
		BufferedReader leer = new BufferedReader(new InputStreamReader(System.in));
		System.out.print(mensaje);
		int num = Integer.parseInt(leer.readLine());
		return num;
	}
}